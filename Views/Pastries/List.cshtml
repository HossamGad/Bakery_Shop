@model PastriesListViewModel

    <h1>Here comes a list of pies:-</h1>
    <h1>@Model.CurrentCategory</h1>
    @foreach (var pastries in Model.Pastries)
    {
    <div>
        <div class="col-sm-4 col-lg-4 col-md-4">
            <div class="thumbnail">
                <img src="@pastries.ImageThumbnailUrl" alt="">
                <div class="caption">
                    <h3 class="pull-right">@pastries.Price.ToString("c")</h3>
                    <h3>
                        <a>@pastries.Name</a>
                    </h3>
                    <p>@pastries.ShortDescription</p>
                </div>
            </div>
        </div>
    </div>
    }



